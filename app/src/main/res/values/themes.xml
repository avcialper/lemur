<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Lemur" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="primaryColor">@color/black</item>
        <item name="secondaryColor">@color/grey</item>
        <item name="bottomMenuColor">@color/seashell</item>
        <item name="searchBackgroundColor">@color/white_smoke</item>
    </style>

    <style name="Theme.Lemur" parent="Base.Theme.Lemur">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">?attr/primaryColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Fill" parent="Theme.Lemur">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/orange</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Lemur</item>
    </style>

    <!-- ScrollView -->
    <style name="ScrollView" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!-- LinearPage -->
    <style name="LinearPage" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:backgroundTint">?attr/backgroundColor</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/padding_large</item>
    </style>


    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Theme.Lemur">
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- TextInput -->
    <style name="TextInput" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- Button -->
    <style name="AuthButton" parent="Theme.Lemur">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/padding_medium</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <!-- Button -->
    <style name="Button" parent="AuthButton" />

    <!-- PressableText -->
    <style name="PressableText" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Image -->
    <style name="AppLogo" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="RoundedImage" parent="Theme.Lemur">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text -->
    <style name="Text" parent="Theme.Lemur">
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="Text.Normal" parent="Text">
        <item name="android:layout_marginEnd">@dimen/zero_dp</item>
        <item name="android:layout_marginStart">@dimen/zero_dp</item>
    </style>

    <!-- Radio Button -->
    <style name="RadioButton" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="buttonTint">@color/radio_button</item>
    </style>

    <!-- Fill Horizontal -->
    <style name="FillHorizontal" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Bottom Navigation Bar Active Item -->
    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/chardonnay</item>
    </style>

    <!-- Internet Connection -->
    <style name="InternetConnection" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/no_internet_connection</item>
    </style>

    <!-- IconLabel Icon -->
    <style name="IconLabel.Icon" parent="Theme.Lemur">
        <item name="android:src">@drawable/ic_edit</item>
    </style>

    <!-- IconLabel Label -->
    <style name="IconLabel.Label" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Task Area Wrapper -->
    <style name="TaskArea.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <!-- Task Area Header -->
    <style name="TaskArea.Header" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Task Area Title -->
    <style name="TaskArea.Title" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Task Area SeeAll -->
    <style name="TaskArea.SeeAll" parent="Theme.Lemur">
        <item name="android:text">@string/see_all</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Task Area Icon-->
    <style name="TaskArea.Icon" parent="Theme.Lemur">
        <item name="android:src">@drawable/ic_right_arrow</item>"
    </style>

    <!-- Task Area Empty Text -->
    <style name="TaskArea.EmptyText" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
    </style>

    <!-- Task Wrapper -->
    <style name="Task.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Task Title -->
    <style name="Task.Title" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Task Description -->
    <style name="Task.Description" parent="Theme.Lemur">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <!-- Task Date Time -->
    <style name="Task.DateTime" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:titleMarginEnd">@dimen/margin_medium</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
    </style>

    <!-- Alert Fragment -->
    <style name="Alert.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <!-- Alert Content -->
    <style name="Alert.Content" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:text">@string/logout_message</item>
    </style>

    <!-- Alert Text Button -->
    <style name="Alert.TextButton" parent="Theme.Lemur">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Image Selector Wrapper -->
    <style name="ImageSelector.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <!-- Image Selector Title -->
    <style name="ImageSelector.Header" parent="Theme.Lemur">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/select_one_image</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Image Selector Icon -->
    <style name="ImageSelector.Icon" parent="Theme.Lemur">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
    </style>

    <!-- Image Selector Content -->
    <style name="ImageSelector.Content" parent="Theme.Lemur">
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Profile Image -->
    <style name="Profile.Image" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/profile_picture_size</item>
        <item name="android:layout_height">@dimen/profile_picture_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <!-- Profile Username -->
    <style name="Profile.Username" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Profile About -->
    <style name="Profile.About" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
    </style>

    <!-- Bottom Sheet Wrapper-->
    <style name="BottomSheetWrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <!-- Theme Selector Title -->
    <style name="ThemeSelectorTitle" parent="Theme.Lemur">
        <item name="android:text">@string/theme</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Profile Update Image -->
    <style name="ProfileUpdateImage" parent="AppLogo">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Search Bar -->
    <style name="SearchBar" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColorHint">?attr/secondaryColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
    </style>

    <!-- Filter Wrapper -->
    <style name="Filter.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:backgroundTint">?attr/backgroundColor</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
    </style>

    <!-- Filter Type RecyclerView -->
    <style name="Filter.RV" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!-- Filter Type -->
    <style name="Filter.Type" parent="Theme.Lemur">
        <item name="android:background">@drawable/filter_type_background</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Divider -->
    <style name="Divider" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

</resources>