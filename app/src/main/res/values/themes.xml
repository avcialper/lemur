<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Lemur" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="primaryColor">@color/black</item>
        <item name="secondaryColor">@color/grey</item>
        <item name="bottomMenuColor">@color/white_smoke</item>
        <item name="inputAreaBackgroundColor">@color/white_smoke</item>
        <item name="teamHeaderColor">@color/white_smoke</item>
        <item name="android:textColorHighlight">@color/salomie</item>
        <item name="android:colorControlActivated">@color/salomie</item>
        <item name="cursorColor">@color/salomie</item>
        <item name="android:navigationBarColor">@color/seashell</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Lemur" parent="Base.Theme.Lemur">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">?attr/primaryColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Fill" parent="Theme.Lemur">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/orange</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Lemur</item>
    </style>

    <!-- ScrollView -->
    <style name="ScrollView" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- LinearPage -->
    <style name="LinearPage" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:backgroundTint">?attr/backgroundColor</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/padding_large</item>
    </style>

    <style name="HomeWrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">?attr/backgroundColor</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/padding_large</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Theme.Lemur">
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="counterTextColor">?attr/primaryColor</item>
    </style>

    <!-- TextInput -->
    <style name="TextInput" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="android:textColor">?attr/primaryColor</item>
        <item name="android:textColorHint">?attr/secondaryColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Button -->
    <style name="AuthButton" parent="Theme.Lemur">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/padding_medium</item>
        <item name="cornerRadius">@dimen/full_corner_radius</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <!-- Button -->
    <style name="Button" parent="AuthButton" />

    <style name="Button.Small" parent="Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/zero_dp</item>
        <item name="android:padding">@dimen/zero_dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- PressableText -->
    <style name="PressableText" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Image -->
    <style name="AppLogo" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <!-- Rounded Image -->
    <style name="RoundedImage" parent="Theme.Lemur">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text -->
    <style name="Text" parent="Theme.Lemur">
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="Text.Normal" parent="Text">
        <item name="android:layout_marginEnd">@dimen/zero_dp</item>
        <item name="android:layout_marginStart">@dimen/zero_dp</item>
    </style>

    <!-- Radio Button -->
    <style name="RadioButton" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="buttonTint">@color/radio_button</item>
    </style>

    <!-- Fill Horizontal -->
    <style name="FillHorizontal" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Bottom Navigation Bar Active Item -->
    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/chardonnay</item>
    </style>

    <!-- Internet Connection -->
    <style name="InternetConnection" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:paddingTop">@dimen/padding_extra_small</item>
        <item name="android:paddingBottom">@dimen/padding_extra_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/no_internet_connection</item>
    </style>

    <!-- IconLabel Icon -->
    <style name="IconLabel.Icon" parent="Theme.Lemur">
        <item name="android:src">@drawable/ic_edit</item>
    </style>

    <!-- IconLabel Label -->
    <style name="IconLabel.Label" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Task Area Wrapper -->
    <style name="TaskArea.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <!-- Task Area Title -->
    <style name="TaskArea.Title" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableRightCompat">@drawable/ic_right_arrow</item>
    </style>

    <!-- Task Area Tasks Wrapper -->
    <style name="TaskArea.TasksWrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="is_short">true</item>
    </style>

    <!-- Task Area Loading -->
    <style name="TaskArea.Progress" parent="Theme.Lemur">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Task Area Empty Text -->
    <style name="TaskArea.EmptyText" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <!-- Task Area Recycler View -->
    <style name="TaskArea.RecyclerView" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Task Wrapper -->
    <style name="Task.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Task Title -->
    <style name="Task.Title" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableRightCompat">@drawable/oval_background</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
    </style>

    <!-- Task Description -->
    <style name="Task.Description" parent="Theme.Lemur">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <!-- Task Date Time -->
    <style name="Task.DateTime" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="drawableRightCompat">@drawable/ic_profile</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Alert Fragment -->
    <style name="Alert.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <!-- Alert Content -->
    <style name="Alert.Content" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:text">@string/logout_message</item>
    </style>

    <!-- Alert Text Button -->
    <style name="Alert.TextButton" parent="Theme.Lemur">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Image Selector Wrapper -->
    <style name="ImageSelector.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <!-- Image Selector Title -->
    <style name="ImageSelector.Header" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/select_one_image</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!-- Image Selector Content Wrapper -->
    <style name="ImageSelector.ContentWrapper" parent="FillHorizontal">
        <item name="android:padding">@dimen/image_selector_content</item>
    </style>

    <!-- Image Selector Content -->
    <style name="ImageSelector.Content" parent="Theme.Lemur">
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Profile Image -->
    <style name="Profile.Image" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/profile_picture_size</item>
        <item name="android:layout_height">@dimen/profile_picture_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <!-- Profile Username -->
    <style name="Profile.Username" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Profile About -->
    <style name="Profile.About" parent="Theme.Lemur">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
    </style>

    <!-- Bottom Sheet Wrapper-->
    <style name="BottomSheetWrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <!-- Theme Selector Title -->
    <style name="ThemeSelectorTitle" parent="Theme.Lemur">
        <item name="android:text">@string/theme</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <!-- Profile Update Image -->
    <style name="ProfileUpdateImage" parent="AppLogo">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/RoundedImage</item>
    </style>

    <!-- Task Image -->
    <style name="TaskImage" parent="AppLogo">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="shapeAppearanceOverlay">@style/TaskImage.Round</item>
    </style>

    <!-- Task Image Round -->
    <style name="TaskImage.Round" parent="TaskImage">
        <item name="cornerSize">5%</item>
    </style>

    <!-- Search Bar -->
    <style name="SearchBar" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColorHint">?attr/secondaryColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
    </style>

    <!-- Filter Wrapper -->
    <style name="Filter.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:backgroundTint">?attr/backgroundColor</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
    </style>

    <!-- Filter Type RecyclerView -->
    <style name="Filter.RV" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!-- Filter Type -->
    <style name="Filter.Type" parent="Theme.Lemur">
        <item name="android:background">@drawable/filter_type_background</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Divider -->
    <style name="Divider" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Picker Wrapper -->
    <style name="Picker.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
    </style>

    <!-- Picker Title -->
    <style name="Picker.Title" parent="Theme.Lemur">
        <item name="android:color">?attr/primaryColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Picker Swiper -->
    <style name="Picker.Swiper" parent="Theme.Lemur">
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
    </style>

    <!-- Picker Button -->
    <style name="Picker.Button" parent="Button">
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:text">@string/confirm</item>
    </style>

    <style name="Picker.Suffix" parent="Text.Normal">
        <item name="android:visibility">gone</item>
    </style>

    <!-- Owl Calendar -->
    <style name="OwlCalendar" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="day_text_color">?attr/primaryColor</item>
        <item name="day_name_text_color">?attr/primaryColor</item>
        <item name="date_text_color">?attr/primaryColor</item>
        <item name="picker_background_color">?attr/backgroundColor</item>
        <item name="picker_button_text">@string/confirm</item>
    </style>

    <!-- Drag Handle Wrapper -->
    <style name="DragHandle.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <!-- Drag Handle Drag -->
    <style name="DragHandle.Drag" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/drag_handle_width</item>
        <item name="android:layout_height">@dimen/drag_handle_height</item>
        <item name="android:background">@drawable/drag_handle_background</item>
    </style>

    <!-- FAB -->
    <style name="FAB" parent="Theme.Lemur">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="srcCompat">@drawable/ic_add</item>
        <item name="tint">@color/black</item>
        <item name="useCompatPadding">true</item>
    </style>

    <!-- Password -->
    <style name="Password" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textPassword</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">?attr/primaryColor</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="TaskDateAndTime" parent="Theme.Lemur">
        <item name="android:layout_gravity">start</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="Task.Skeleton.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="Task.Skeleton.Section" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/skeleton_height</item>
        <item name="android:background">@drawable/skeleton_background</item>
    </style>

    <style name="Profile.Skeleton.Wrapper" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="Profile.Skeleton.Picture" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/profile_picture_size</item>
        <item name="android:layout_height">@dimen/profile_picture_size</item>
        <item name="android:background">@drawable/skeleton_rounded_background</item>
    </style>

    <style name="Profile.Skeleton.Section.Small" parent="Theme.Lemur">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/skeleton_height</item>
        <item name="android:background">@drawable/skeleton_background</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="Profile.Skeleton.Section.Big" parent="Profile.Skeleton.Section.Small">
        <item name="android:layout_height">@dimen/skeleton_height_big</item>
    </style>

    <style name="TaskDetail.Title" parent="Theme.Lemur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableLeftCompat">@drawable/ic_profile</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="drawableRightCompat">@drawable/oval_background</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="TaskDetail.DateAndTime" parent="Theme.Lemur">
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

