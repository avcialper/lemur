<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Fill"
    tools:context=".ui.team.detail.TeamDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/headerColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/team_image"
            style="@style/TeamDetail.Image"
            app:layout_constraintStart_toStartOf="@id/inner_wrapper"
            app:layout_constraintTop_toTopOf="@id/inner_wrapper" />

        <TextView
            android:id="@+id/tv_team_name"
            style="@style/TeamDetail.TeamName"
            app:layout_constraintEnd_toEndOf="@id/inner_wrapper"
            app:layout_constraintStart_toEndOf="@id/team_image"
            app:layout_constraintTop_toTopOf="@id/team_image" />

        <TextView
            android:id="@+id/tv_team_description"
            style="@style/TeamDetail.TeamDescription"
            app:layout_constraintEnd_toEndOf="@id/tv_team_name"
            app:layout_constraintStart_toEndOf="@id/team_image"
            app:layout_constraintTop_toBottomOf="@id/tv_team_name" />

        <View
            android:id="@+id/divider"
            style="@style/TeamDetail.Divider"
            app:layout_constraintEnd_toEndOf="@id/inner_wrapper"
            app:layout_constraintStart_toStartOf="@id/inner_wrapper"
            app:layout_constraintTop_toBottomOf="@id/team_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rooms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inner_wrapper" />

    <com.avcialper.lemur.ui.component.CustomFAB
        android:id="@+id/fab"
        style="@style/Theme.Lemur"
        android:contentDescription="@string/create_task_button"
        app:fab_count="two"
        app:fab_icon="@drawable/ic_add"
        app:first_fab_text="@string/create_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:second_fab_text="@string/create_room" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/FillHorizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.avcialper.lemur.ui.component.EmptyArea
        android:id="@+id/empty_area"
        style="@style/FillHorizontal"
        android:layout_margin="@dimen/margin_medium"
        android:visibility="gone"
        app:buttonText="@string/create_room"
        app:contentText="@string/empty_room_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inner_wrapper" />

</androidx.constraintlayout.widget.ConstraintLayout>