<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearPage"
    android:gravity="start"
    tools:context=".ui.tasks.detail.TaskDetailFragment">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/TaskDetail.Title"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/TaskDetail.DateAndTime"
        app:drawableLeftCompat="@drawable/ic_calendar"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/TaskDetail.DateAndTime"
        app:drawableLeftCompat="@drawable/ic_clock"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/TaskDetail.Description"
        tools:text="@string/app_name" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_task"
        style="@style/TaskImage"
        android:contentDescription="@string/user_profile_picture"
        app:srcCompat="@drawable/ic_profile" />

</LinearLayout>