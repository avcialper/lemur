<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView style="@style/ScrollView">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/LinearPage"
        android:gravity="top"
        tools:context=".ui.home.HomeFragment">

        <com.avcialper.owlcalendar.OwlCalendar
            android:id="@+id/owl_calendar"
            style="@style/OwlCalendar" />

        <com.avcialper.lemur.ui.component.TasksArea
            android:id="@+id/component_selected_date"
            style="@style/FillHorizontal" />

        <com.avcialper.lemur.ui.component.TasksArea
            android:id="@+id/component_today"
            style="@style/FillHorizontal" />

        <com.avcialper.lemur.ui.component.TasksArea
            android:id="@+id/component_continues"
            style="@style/FillHorizontal" />

        <com.avcialper.lemur.ui.component.TasksArea
            android:id="@+id/component_completed"
            style="@style/FillHorizontal" />

        <com.avcialper.lemur.ui.component.TasksArea
            android:id="@+id/component_canceled"
            style="@style/FillHorizontal" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>