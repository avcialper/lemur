<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DateSelector.Wrapper"
    tools:context=".ui.component.DateSelector">

    <include
        android:id="@+id/drag_handle"
        layout="@layout/drag_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/np_day"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/np_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintEnd_toStartOf="@id/np_month"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drag_handle" />

    <NumberPicker
        android:id="@+id/np_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintEnd_toStartOf="@id/np_year"
        app:layout_constraintStart_toEndOf="@id/np_day"
        app:layout_constraintTop_toTopOf="@id/np_day" />

    <NumberPicker
        android:id="@+id/np_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/np_month"
        app:layout_constraintTop_toTopOf="@id/np_month" />

    <Button
        android:id="@+id/button_complete"
        style="@style/Button"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:text="@string/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/np_month" />


</androidx.constraintlayout.widget.ConstraintLayout>