<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Filter.Wrapper"
    tools:context=".ui.tasks.filter.TasksFilterFragment">

    <com.avcialper.lemur.ui.component.SearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:hint="@string/search_task" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_filter"
        style="@style/Filter.RV" />

    <com.avcialper.lemur.ui.component.tasks.Tasks
        android:id="@+id/component_tasks"
        style="@style/Fill"
        app:have_margin="true" />

</LinearLayout>