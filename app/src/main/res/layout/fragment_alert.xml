<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:backgroundTint="?attr/backgroundColor"
    android:padding="@dimen/padding_large"
    tools:context=".ui.component.AlertFragment">

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/logout_message"
        android:textColor="?attr/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPositive"
        style="@style/AlertTextButton"
        android:text="@string/yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLabel" />

    <TextView
        android:id="@+id/textNegative"
        style="@style/AlertTextButton"
        android:text="@string/no"
        app:layout_constraintEnd_toStartOf="@id/textPositive"
        app:layout_constraintTop_toBottomOf="@id/textLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>